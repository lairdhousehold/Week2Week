@model Week2Week.Models.TransactionViewModels.TransactionSubTypesViewModel

@{
    ViewData["Title"] = "Categories";
}
<h2>@ViewData["Title"]</h2>

@foreach (var type in Model.TransactionTypes)
{
    <div class="row typesList">
        <div class="col-md-12"><h3>@Html.DisplayFor(modelItem => type.Label)</h3></div>
    </div>

    @foreach (var subcat in Model.TransactionTypes)
    {
        if (subcat.TransactionTypeId == type.TransactionTypeId)
        {
            <div class="row typesSubCategories">
                <div class="col-md-12"><a asp-controller="Transactions" asp-action="TransactionSubType" asp-route-id="@subcat."><span>(@Html.DisplayFor(modelItem => subcat.Label)</span>)</a></div>
            </div>
        }
    }
}